{
    "name": "runner",
    "version": "1.0.0",
    "scripts": {
        "postinstall": "npm run prepack && node setup.js --init",
        "update": "npm run prepack && node setup.js --update",
        "build": "tsc",
        "build:client": "npm run --prefix client/ build",
        "start": "node ./build/index.js",
        "dev": "npm run build:client && npm run dev:server",
        "dev:server": "ts-node ./src/index.ts -w -p 8080 --encoder-renderer-proxy",
        "prepack": "npm run build:client && npm run build",
        "pack": "pkg ."
    },
    "dependencies": {
        "async-mutex": "^0.3.2",
        "commander": "^9.4.0",
        "dotenv": "^16.0.1",
        "express": "~4.18.1",
        "morgan": "^1.10.0",
        "tree-kill": "^1.2.2",
        "uuid": "^8.3.2",
        "ws": "^8.8.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.7.7",
        "@types/ws": "^8.5.3",
        "node-windows": "^1.0.0-beta.8",
        "pkg": "^4.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "bin": {
        "runner": "build/index.js"
    },
    "pkg": {
        "assets": [
            "client/build/**/*"
        ],
        "targets": [
            "node10-macos",
            "node10-linux",
            "node10-win"
        ],
        "outputPath": "dist"
    }
}
