{
    "name": "runner",
    "version": "1.0.0",
    "bin": {
        "runner": "build/index.js"
    },
    "scripts": {
        "build": "tsc --skipLibCheck --noEmit && npm run build:swc",
        "build:client": "npm run --prefix client/ build",
        "build:swc": "swc src --out-dir build",
        "dev": "npm run build:client && npm run dev:server",
        "dev:server": "node -r @swc-node/register ./src/index.ts -w -p 80,8080 --encoder-renderer-proxy",
        "prepack": "npm run build:client && npm run build",
        "pack": "pkg .",
        "start": "node ./build/index.js",
        "update": "git fetch --all && git reset --hard origin/main"
    },
    "dependencies": {
        "async-mutex": "^0.3.2",
        "commander": "^9.4.0",
        "dotenv": "^16.0.1",
        "express": "~4.18.1",
        "morgan": "^1.10.0",
        "uuid": "^8.3.2",
        "ws": "^8.8.1"
    },
    "devDependencies": {
        "@swc-node/register": "^1.5.1",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.247",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.7.7",
        "@types/ws": "^8.5.3",
        "pkg": "^4.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "pkg": {
        "assets": [
            "client/build/**/*",
            ".env"
        ],
        "targets": [
            "node10-macos",
            "node10-linux",
            "node10-win"
        ],
        "outputPath": "dist"
    }
}
