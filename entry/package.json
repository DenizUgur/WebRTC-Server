{
    "name": "entry",
    "version": "1.0.0",
    "bin": {
        "runner": "build/index.js"
    },
    "scripts": {
        "build": "tsc --skipLibCheck --noEmit && npm run build:swc",
        "build:client": "npm run --prefix client/ build",
        "build:swc": "swc src --out-dir build",
        "dev": "npm run build:client && npm run dev:server",
        "dev:server": "node -r @swc-node/register -r dotenv/config ./src/index.ts",
        "postinstall": "npm --prefix client/ install && npm run prepack && node setup.js --init",
        "prepack": "npm run build:client && npm run build",
        "pack": "pkg .",
        "start": "node -r dotenv/config ./build/index.js",
        "update": "npm run prepack && node setup.js --update"
    },
    "dependencies": {
        "aws-sdk": "^2.1199.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "helmet": "^5.1.1"
    },
    "devDependencies": {
        "@swc-node/register": "^1.5.1",
        "@swc/cli": "^0.1.57",
        "@swc/core": "^1.2.247",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "pkg": "^4.5.1",
        "pm2": "^5.2.0",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4"
    },
    "pkg": {
        "assets": [
            "client/build/**/*"
        ],
        "targets": [
            "node10-macos",
            "node10-linux",
            "node10-win"
        ],
        "outputPath": "dist"
    }
}
